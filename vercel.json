{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["client/build/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.ts" },
    { "src": "/(.*)", "dest": "/client/build/$1" }
  ]
}
